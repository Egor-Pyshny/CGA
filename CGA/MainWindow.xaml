<Window x:Class="CGA.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CGA"
        mc:Ignorable="d" Width="1200" Height="1000"
        Title="MainWindow">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1000"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <Grid x:Name="Pict">
            
        </Grid>
        <Grid Background="Black" Grid.Column="1">
            <StackPanel>
                <Label Foreground="White" Name="ms" FontSize="22" Content="Time: " HorizontalAlignment="Center" VerticalAlignment="Top" Width="200"/>
                <Label Foreground="White" Name="vertexes" FontSize="22" Content="v" HorizontalAlignment="Center" Width="200"/>
                <Label Foreground="White" Name="faces" FontSize="22" Content="f" HorizontalAlignment="Center" Width="200"/>
                <ComboBox Visibility="Collapsed" Name="object_selector" Height="20" Width="130" HorizontalAlignment="Center" Margin="5" VerticalAlignment="Top"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
